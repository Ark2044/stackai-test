generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id               String             @id @default(cuid())
  email            String             @unique
  password         String
  emailVerified    DateTime?
  image            String?
  name             String?
  accounts         Account[]
  models           Model[]            @relation("AuthorModels")
  Repository       Repository[]
  RepositoryAccess RepositoryAccess[]
  sessions         Session[]
  validators       Validator[]
}

model Validator {
  id        String      @id @default(cuid())
  userId    String
  stake     Float       @default(0)
  createdAt DateTime    @default(now())
  votes     MergeVote[]
  user      User        @relation(fields: [userId], references: [id])

  @@index([userId])
}

model MergeVote {
  id           String     @id @default(cuid())
  validatorId  String
  modelMergeId String
  approve      Boolean
  stakeUsed    Float
  txHash       String?
  createdAt    DateTime   @default(now())
  modelMerge   ModelMerge @relation(fields: [modelMergeId], references: [id])
  validator    Validator  @relation(fields: [validatorId], references: [id])

  @@unique([validatorId, modelMergeId])
  @@index([modelMergeId])
}

model Repository {
  id               String             @id @default(cuid())
  name             String
  slug             String
  desc             String?
  ownerId          String
  isPublic         Boolean            @default(false)
  createdAt        DateTime           @default(now())
  branches         Branch[]
  User             User               @relation(fields: [ownerId], references: [id])
  RepositoryAccess RepositoryAccess[]

  @@unique([ownerId, slug])
}

model Branch {
  id           String        @id @default(cuid())
  name         String
  repositoryId String
  createdAt    DateTime      @default(now())
  repository   Repository    @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  models       Model[]
  AsBaseBranch PullRequest[] @relation("BaseBranch")
  AsNewBranch  PullRequest[] @relation("NewBranch")

  @@index([repositoryId])
}

model Model {
  id         String       @id @default(cuid())
  name       String
  branchId   String
  authorId   String
  status     ModelStatus  @default(PENDING)
  createdAt  DateTime     @default(now())
  author     User         @relation("AuthorModels", fields: [authorId], references: [id])
  branch     Branch       @relation(fields: [branchId], references: [id])
  ModelMerge ModelMerge[]

  @@index([authorId])
  @@index([branchId])
}

model PullRequest {
  id                String            @id @default(cuid())
  title             String
  description       String?
  baseBranchranchId String
  newBranchranchId  String
  status            PullRequestStatus @default(PENDING)
  createdAt         DateTime          @default(now())
  modelMerges       ModelMerge[]
  baseBranch        Branch            @relation("BaseBranch", fields: [baseBranchranchId], references: [id])
  newBranch         Branch            @relation("NewBranch", fields: [newBranchranchId], references: [id])

  @@index([baseBranchranchId])
  @@index([newBranchranchId])
}

model ModelMerge {
  id            String      @id @default(cuid())
  pullRequestId String
  resultModelId String?
  status        MergeStatus @default(PENDING)
  txHash        String?
  createdAt     DateTime    @default(now())
  votes         MergeVote[]
  pullRequest   PullRequest @relation(fields: [pullRequestId], references: [id])
  resultModel   Model?      @relation(fields: [resultModelId], references: [id])

  @@index([pullRequestId])
  @@index([resultModelId])
}

model RepositoryAccess {
  id           String     @id @default(cuid())
  repositoryId String
  userId       String
  createdAt    DateTime   @default(now())
  Repository   Repository @relation(fields: [repositoryId], references: [id])
  User         User       @relation(fields: [userId], references: [id])

  @@index([repositoryId])
  @@index([userId])
}

enum ModelStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MergeStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PullRequestStatus {
  PENDING
  APPROVED
  REJECTED
  MERGED
}
